{
  "name": "apollo-universal-starter-kit",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "start": "node --harmony build/server",
    "test": "lerna run test --concurrency 1 --stream",
    "lint": "lerna run lint",
    "seed": "lerna run seed --stream",
    "watch": "lerna run watch --stream",
    "heroku-postbuild": "rm -rf build && spin exp login -u $EXP_USERNAME -p $EXP_PASSWORD --non-interactive && spin -c .spinrc.prod.json build && spin exp p --non-interactive && npm run seed",
    "cli": "node tools/cli",
    "postinstall": "opencollective postinstall",
    "stripe:setup": "node packages/server/src/modules/subscription/cli/stripeSetup"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sysgears/apollo-universal-starter-kit"
  },
  "bugs": {
    "url": "https://github.com/sysgears/apollo-universal-starter-kit/issues"
  },
  "homepage": "https://github.com/sysgears/apollo-universal-starter-kit",
  "keywords": [
    "apollo",
    "universal",
    "starter",
    "graphql",
    "react",
    "redux"
  ],
  "author": "SysGears INC",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "graphql": "^0.11.7"
  },
  "greenkeeper": {
    "ignore": [
      "graphql"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/apollo-universal-starter-kit",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  },
  "devDependencies": {
    "lerna": "^2.5.1"
  }
}
