{
  "builders": {
    "android": {
      "stack": ["react-native", "android"],
      "entry": "./src/index.js",
      "enabled": true
    },
    "ios": {
      "stack": ["react-native", "ios"],
      "entry": "./src/index.js",
      "enabled": true
    },
    "test": {
      "stack": ["react-native-web", "server"],
      "roles": ["test"]
    }
  },
  "options": {
    "backendBuildDir": "../server/build",
    "frontendBuildDir": "build",
    "dllBuildDir": "build/dll",
    "overridesConfig": "./webpack.overrides.js",
    "stack": ["apollo", "react", "styled-components", "sass", "less", "es6", "webpack"],
    "backendUrl": "https://apollo-universal-starter-kit.herokuapp.com/graphql",
    "ssr": true,
    "webpackDll": true,
    "devProxy": true,
    "frontendRefreshOnBackendChange": true
  }
}
