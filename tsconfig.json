{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "esnext"],
    "noImplicitAny": false, //temporarily change to remove errors of declaration
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["**/typings.d.ts", "**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules"]
}
